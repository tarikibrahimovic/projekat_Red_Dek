<Window x:Class="projekat_Red_Dek.Views.RedMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekat_Red_Dek.Views"
        xmlns:vm="clr-namespace:projekat_Red_Dek.ViewModels"
        mc:Ignorable="d"
        Title="RedMain" MinHeight="450" MinWidth="800" SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <vm:RedVM x:Key="vm"/>
    </Window.Resources>
    <Grid Background="White" DataContext="{StaticResource vm}" >
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="2" Background="LightGreen">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="110" HorizontalAlignment="Left" Margin="0 0 10 0" Text="{Binding Query, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Ucitaj element" Width="100" Command="{Binding CreateCommand}" CommandParameter="{Binding Query}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Ukloni element" Width="100" HorizontalAlignment="Left" Command="{Binding DelateCommand}"/>
                <Button Content="Sacuvaj red" Width="100" HorizontalAlignment="Left" Margin="10 0 0 0" Command="{Binding SaveCommand}"/>
                <Button Content="Ucitaj red" Width="100" HorizontalAlignment="Left" Margin="10 0 0 0" Command="{Binding LoadCommand}"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Grid.Row="0">
            <Canvas Grid.Row="0" x:Name="kanvas" VerticalAlignment="Top" HorizontalAlignment="Center">

                <ItemsControl ItemsSource="{Binding RedPrikaz}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding Pozicija.X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Pozicija.Y}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Vrednost}"
                                       Width="30" Height="30" Background="Tan" TextAlignment="Center"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding LinijaPrikaz}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line Stroke="Black" StrokeThickness="3"
                                  X1="{Binding Pocetak.X}" Y1="{Binding Pocetak.Y}"
                                  X2="{Binding Kraj.X}" Y2="{Binding Kraj.Y}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
